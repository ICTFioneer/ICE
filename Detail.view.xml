<mvc:View
  controllerName="ice.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:smartTable="sap.ui.comp.smarttable"
  xmlns:smartFilter="sap.ui.comp.smartfilterbar">

  <Page id="detailPage" title="My Reports" showNavButton="true" navButtonPress=".onNavBack">
    <content>

      <smartFilter:SmartFilterBar
        id="sfbDetail"
        entitySet="TeamViewL1Set"
        liveMode="false"
        useToolbar="true"
        search=".onSearch"
      />

      <IconTabBar id="itbViews" selectedKey="product" select=".onTabSelect">
        <items>

          <IconTabFilter key="product" text="Product View">
            <smartTable:SmartTable
              id="stProduct"
              entitySet="TeamProductViewL1Set"
              smartFilterId="sfbDetail"
              tableType="ResponsiveTable"
              useVariantManagement="true"
              useTablePersonalisation="true"
              enableAutoBinding="false"
              beforeRebindTable=".onBeforeRebindAny"
              initiallyVisibleFields="ICERunDate,LegalEntity,CompanyCode,TradingPartner,FinalBreakCode,LegalEntityName,Currency,TradingPartnerName,Product,Segment,ICCategory,ReportingUnitBalance,CounterpartyUnitBalance,BalanceDifference,Status,TPSystem"
            >
              
            <Table  mode="MultiSelect"  itemPress=".onProductRowPress">
						<items>
							<ColumnListItem type="Navigation"/>
						</items>
					</Table>
            </smartTable:SmartTable>
          </IconTabFilter>

          <IconTabFilter key="segment" text="Segment View">
            <smartTable:SmartTable
              id="stSegment"
              entitySet="TeamSegmentViewL1Set"
              smartFilterId="sfbDetail"
              tableType="ResponsiveTable"
              useVariantManagement="true"
              useTablePersonalisation="true"
              enableAutoBinding="false"
              beforeRebindTable=".onBeforeRebindAny"
              initiallyVisibleFields="ICERunDate,LegalEntity,CompanyCode,TradingPartner,FinalBreakCode,LegalEntityName,Currency,TradingPartnerName,Product,Segment,ICCategory,ReportingUnitBalance,CounterpartyUnitBalance,BalanceDifference,Status,TPSystem"
            >
              
            <Table  mode="MultiSelect"  itemPress=".onProductRowPress">
						<items>
							<ColumnListItem type="Navigation"/>
						</items>
					</Table>
            </smartTable:SmartTable>
          </IconTabFilter>

          <IconTabFilter key="caption" text="Caption View">
            <smartTable:SmartTable
              id="stCaption"
              entitySet="TeamCategoryViewL1Set"
              smartFilterId="sfbDetail"
              tableType="ResponsiveTable"
              useVariantManagement="true"
              useTablePersonalisation="true"
              enableAutoBinding="false"
              beforeRebindTable=".onBeforeRebindAny"
              initiallyVisibleFields="ICERunDate,LegalEntity,CompanyCode,TradingPartner,FinalBreakCode,LegalEntityName,Currency,TradingPartnerName,Product,Segment,ICCategory,ReportingUnitBalance,CounterpartyUnitBalance,BalanceDifference,Status,TPSystem"

              
            >
            <Table  mode="MultiSelect"  itemPress=".onProductRowPress">
						<items>
							<ColumnListItem type="Navigation"/>
						</items>
					</Table>
            </smartTable:SmartTable>
          </IconTabFilter>

        </items>
      </IconTabBar>

    </content>
  </Page>
</mvc:View>


