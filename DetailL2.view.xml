<mvc:View
  controllerName="ice.controller.DetailL2"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:smartTable="sap.ui.comp.smarttable"
  xmlns:smartFilter="sap.ui.comp.smartfilterbar">

  <Page id="detailL2Page" title="Detail L2" showNavButton="true" navButtonPress=".onNavBack">
    <content>

      <smartFilter:SmartFilterBar
        id="sfbDetailL2"
        entitySet="TeamProductViewL2Set"
        liveMode="false"
        useToolbar="true"
        search=".onSearch"
      />

      <smartTable:SmartTable
        id="stDetailL2"
        entitySet="TeamProductViewL2Set"
        smartFilterId="sfbDetailL2"
        tableType="ResponsiveTable"
        useVariantManagement="true"
        useTablePersonalisation="true"
        enableAutoBinding="false"
        beforeRebindTable=".onBeforeRebindL2"
        initiallyVisibleFields="ICERunDate,LegalEntity,CompanyCode,TradingPartner,FinalBreakCode,Product,Segment,ICCategory,ReportingUnitBalance,CounterpartyUnitBalance,BalanceDifference,Status,TPSystem">

        <Table mode="MultiSelect" itemPress=".onItemPress">
          <items>
            <ColumnListItem type="Navigation"/>
          </items>
        </Table>

      </smartTable:SmartTable>

    </content>
  </Page>
</mvc:View>
